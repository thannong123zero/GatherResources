@model SharedLibrary.UserInterfaceDTO.ProductUI

@{
    ViewData["Title"] = "Create";
}
<div class="container pt-2">
    <h3>Add A Production</h3>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-2">
            <div class="form-group col-6">
                <label asp-for="NameEN" class="control-label"></label>
                <input asp-for="NameEN" class="form-control" />
                <span asp-validation-for="NameEN" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="NameVN" class="control-label"></label>
                <input asp-for="NameVN" class="form-control" />
                <span asp-validation-for="NameVN" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="form-group col-6">
                <label asp-for="DiscriptionEN" class="control-label"></label>
                <textarea asp-for="DiscriptionEN" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DiscriptionEN" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="DiscriptionVN" class="control-label"></label>
                <textarea asp-for="DiscriptionVN" class="form-control" rows="4"></textarea>
                <span asp-validation-for="DiscriptionVN" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-6">
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="MenuItemID" class="control-label"></label>
                        <input asp-for="MenuItemID" class="form-control" />
                        <span asp-validation-for="MenuItemID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="UnitID" class="control-label"></label>
                        <input asp-for="UnitID" class="form-control" />
                        <span asp-validation-for="UnitID" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="form-group col-4">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Discount" class="control-label"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContentEN" class="control-label"></label>
            <input asp-for="ContentEN" class="form-control" />
            <span asp-validation-for="ContentEN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ContentVN" class="control-label"></label>
            <input asp-for="ContentVN" class="form-control" />
            <span asp-validation-for="ContentVN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images" class="control-label"></label>
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsHome" /> @Html.DisplayNameFor(model => model.IsHome)
            </label>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
