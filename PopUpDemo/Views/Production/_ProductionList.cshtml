@model List<ProductionViewModel>

@if(Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Expiration Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th>@index</th>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.ExpirationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Production" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Production" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}