@model List<ProductionViewModel>

@if(Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Expiration Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th>@index</th>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.ExpirationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <button class="btn btn-primary" onclick="GetFromAjax('@Url.Action("Edit","Production",new {id=@item.ID})')">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="OpenPopupDelete('@item.ID')">
                            Delete
                        </button>                   
                    </td>
                </tr>
                index++;
            }
        </tbody>
    </table>
}