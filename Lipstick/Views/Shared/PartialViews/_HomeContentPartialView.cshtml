        </div>
        <div class="col-4">
            <img class="w-100" src="~/assets/images/Son-Marc-Jacobs.png" />
            <div class="text-center text-18 font-blod">Review Son Môi</div>
        </div>
    </div>
    <div class="div-line mt-4"></div>
</div>
<script>
    $('#newProductList').owlCarousel({
        margin: 10,
        loop: false,
        nav: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 2
            },
            1000: {
                items: 4
            }
        }
    });
