                    Mua Ngay!
                </div>
                <div class="itemInfor">
                    <p class="font-weight-600 text-16 ">SON GUCCI</p>
                    <a asp-action="index" asp-controller="productDetails" asp-route-ID="abc">
                        <p class="nameProduction font-italic">Son Gucci Màu 25 Goldie Red Matte Đỏ Cổ Điển Hot Nhất</p>
                    </a>
                    <p><span class="priceOld text-14 font-weight-600"><s>1999.999VND</s></span> <span class="discount text-14 font-weight-600">999.999VND</span></p>
                </div>
            </div>
        }
    </div>

    <h1 class="text-32 font-weight-600 mt-3">Khuyến Mãi</h1>
    <div id="promotionalProductList" class="owl-carousel owl-theme customCarousel">
        @for (int i = 0; i < 8; i++)
        {
